@{
    ViewData["Title"] = "Home Page";
}
@model List<Hero>

<div class="text-center">
    <h1 class="display-4">Dragonlance Characters</h1>

    <form>
        <input name="characterName" />
    </form>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Race</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hero in Model)
            {
            <tr>
                <td>@hero.Name</td>
                <td>@hero.Class</td>
                <td>@hero.Race</td>
                <td><a href="/home/herodetail/@hero.Id">detail</a></td>
            </tr>
            }
        </tbody>
    </table>

</div>
